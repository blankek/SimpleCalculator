<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:gravity="end"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dark_place"
        android:background="#9B9999"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/dark_place"/>

    <View
        android:id="@+id/dark_place"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_margin="5dp">


        <Button
            android:id="@+id/one"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="1"
            android:textSize="50sp"
            android:layout_column="0"
            android:layout_row="3"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/two"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="2"
            android:textSize="50sp"
            android:layout_column="1"
            android:layout_row="3"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/three"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="3"
            android:textSize="50sp"
            android:layout_column="2"
            android:layout_row="3"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/four"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="4"
            android:textSize="50sp"
            android:layout_column="0"
            android:layout_row="2"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/five"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="5"
            android:textSize="50sp"
            android:layout_column="1"
            android:layout_row="2"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/six"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="6"
            android:textSize="50sp"
            android:layout_column="2"
            android:layout_row="2"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="7"
            android:textSize="50sp"
            android:layout_column="0"
            android:layout_row="1"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="8"
            android:textSize="50sp"
            android:layout_column="1"
            android:layout_row="1"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="9"
            android:textSize="50sp"
            android:layout_column="2"
            android:layout_row="1"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="0"
            android:textSize="50sp"
            android:layout_column="1"
            android:layout_row="4"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="+"
            android:textSize="50sp"
            android:layout_column="3"
            android:layout_row="3"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="-"
            android:textSize="50sp"
            android:layout_column="3"
            android:layout_row="2"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/multiply"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="*"
            android:textSize="50sp"
            android:layout_column="3"
            android:layout_row="1"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/divison"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="/"
            android:textSize="50sp"
            android:layout_column="3"
            android:layout_row="0"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/equals"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="="
            android:textSize="50sp"
            android:layout_column="3"
            android:layout_row="4"
            app:layout_constraintTop_toTopOf="@id/dark_place"/>

        <Button
            android:id="@+id/delete_all"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="C"
            android:textSize="50sp"
            android:layout_column="0"
            android:layout_row="0"/>

        <Button
            android:id="@+id/brackets"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="()"
            android:textSize="50sp"
            android:layout_column="1"
            android:layout_row="0"/>

        <Button
            android:id="@+id/back"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="&lt;-"
            android:textSize="50sp"
            android:layout_column="2"
            android:layout_row="0"/>

        <Button
            android:id="@+id/brackets_minus"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="(-"
            android:textSize="50sp"
            android:layout_column="0"
            android:layout_row="4"/>

        <Button
            android:id="@+id/point"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text=","
            android:textSize="50sp"
            android:layout_column="2"
            android:layout_row="4"/>

    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>